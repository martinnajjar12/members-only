<div class='container h-100 d-flex justify-content-center align-items-center flex-column'>
    <% if flash.notice %>
      <div class='alert alert-success'>
        <%= render 'layouts/notice' %>
      </div>
    <% end %>
    <% if flash.alert %>
      <div class='alert alert-warning'>
        <%= render 'layouts/alerts' %>
      </div>
    <% end %>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |message| %>
          <div class='alert alert-danger'>
            <%= message %>
          </div>
        <% end %>
    <% end %>
  <h1 class='display-1 pb-4'>Post a new secret ðŸ™Š</h1>
  <%= simple_form_for(@post) do |f| %>
    <div class="form-group">
      <%= f.input :title, label: 'Enter your secret title', label_html: { class: 'label' }, placeholder: 'Enter the title please...', autofocus: true, class: 'form-control' %>
      <small class="form-text text-muted">We'll never share your name with none members.</small>
    </div>
    <div class="form-group">
      <%= f.label 'Enter your secret here'%>
      <%= f.text_area :body, placeholder: 'Once upon a day....', class: 'form-control' %>
    </div>
    <%= f.button :submit, class: 'btn btn-primary btn-sm'%>
    <%= link_to 'Home Page', posts_path, class: 'btn btn-primary btn-sm' %>
  <% end %>
</div>