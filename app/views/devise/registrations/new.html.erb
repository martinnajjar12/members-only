<div class='container h-100 d-flex justify-content-center align-items-center flex-column'>
    <% if flash.notice %>
      <div class='alert alert-success'>
        <%= render 'layouts/notice' %>
      </div>
    <% end %>
    <% if flash.alert %>
      <div class='alert alert-danger'>
        <%= render 'layouts/alerts' %>
      </div>
    <% end %>
  <h1 class='display-1 pb-4'>Sign Up</h1>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-group">
      <%= f.input :name, label: 'Name:', label_html: { class: 'label' }, placeholder: 'John Doe', autofocus: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :email,
                required: true,
                autofocus: true,
                placeholder: 'john@example.com',
                input_html: { autocomplete: "email" }%>
    </div>
    <div class="form-group">
      <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    </div>
    <div class='form-group'>
      <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    </div>
    <div class='text-center'>
      <%= f.button :submit, 'Sign Up', class: 'btn btn-primary btn-sm'%>
    </div>
    <%= render "devise/shared/links" %>
    <%= link_to 'Back to Home Page', posts_path, class: 'btn btn-outline-primary btn-sm mt-3' %>
  <% end %>
</div>
